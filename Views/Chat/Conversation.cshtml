@model LlmChatApp.Models.ChatViewModel

@{
    ViewData["Title"] = Model.Conversation.Title;
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>@Model.Conversation.Title</h2>
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary">← Back to Conversations</a>
                <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-secondary">Logout</a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div id="chat-messages" style="height: 400px; overflow-y: auto; border: 1px solid #dee2e6; padding: 15px; margin-bottom: 15px; border-radius: 5px;">
                    @if (Model.Messages.Any())
                    {
                        @foreach (var message in Model.Messages)
                        {
                            <div class="message mb-3 @(message.IsFromUser ? "text-end" : "text-start")">
                                <div class="d-inline-block p-2 rounded @(message.IsFromUser ? "bg-primary text-white" : "bg-light") " style="max-width: 70%;">
                                    <div>@message.Content</div>
                                    <small class="@(message.IsFromUser ? "text-white-50" : "text-muted")">
                                        @message.Timestamp.ToString("HH:mm")
                                        @if (!message.IsFromUser && !string.IsNullOrEmpty(message.LLMModel))
                                        {
                                            <span>• @message.LLMModel</span>
                                        }
                                    </small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <p>No messages yet. Start the conversation!</p>
                        </div>
                    }
                </div>

                <form asp-action="SendMessage" method="post" class="d-flex" id="chat-form">
                    <input type="hidden" name="conversationId" value="@Model.Conversation.Id" />
                    <input type="text" name="message" id="message-input" class="form-control me-2" placeholder="Type your message..." required />
                    <button type="submit" id="send-button" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    var chatMessages = document.getElementById('chat-messages');
    chatMessages.scrollTop = chatMessages.scrollHeight;
    
    // Handle form submission to disable input during processing
    var chatForm = document.getElementById('chat-form');
    var messageInput = document.getElementById('message-input');
    var sendButton = document.getElementById('send-button');
    
    chatForm.addEventListener('submit', function() {
        // Disable input and button to prevent spam
        messageInput.disabled = true;
        sendButton.disabled = true;
        sendButton.textContent = 'Sending...';
        
        // Note: Re-enabling happens automatically when page reloads after form submission
    });
});
</script>